# Canton MCP Server Configuration
# Copy this file to .env.canton and adjust values as needed

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVER_URL=http://localhost:7284

# ============================================================================
# Development Settings
# ============================================================================
# Enable hot-reload for resource files (development only)
CANTON_HOT_RELOAD=false

# ============================================================================
# DCAP (Performance Tracking) - ENABLED by default
# ============================================================================
DCAP_ENABLED=true

# UDP relay address or multicast address
# Examples:
#   - Direct relay: 159.89.110.236
#   - Multicast: 239.255.0.1
DCAP_MULTICAST_IP=159.89.110.236

# DCAP port
DCAP_PORT=10191

# ============================================================================
# x402 Payment Configuration - DISABLED by default
# ============================================================================
X402_ENABLED=false

# Wallet configuration (required if X402_ENABLED=true)
X402_WALLET_ADDRESS=
X402_WALLET_PRIVATE_KEY=

# Network and token
X402_NETWORK=base-sepolia
X402_TOKEN=USDC

# Internal API key for payment bypass (optional)
X402_INTERNAL_API_KEY=

# Pricing configuration
X402_PRICING_MODE=dynamic
X402_MIN_PAYMENT=0.001
X402_MAX_PAYMENT=10.0

# Payment processing timeouts (seconds)
X402_VERIFICATION_TIMEOUT=30
X402_SETTLEMENT_TIMEOUT=60
