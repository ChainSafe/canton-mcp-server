# Canton MCP Server - Production Environment Configuration
# Deploy this to: /opt/canton-mcp-server/.env.canton

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_URL=http://91.99.186.83:7284

# =============================================================================
# DAML SDK Configuration
# =============================================================================
DAML_SDK_VERSION=3.4.0-snapshot.20251013.0

# =============================================================================
# LLM Authorization Extraction (PRIMARY METHOD)
# =============================================================================
# Enable LLM-based authorization extraction for DAML code analysis
ENABLE_LLM_AUTH_EXTRACTION=true

# Anthropic API key for Claude
# TODO: Add your Anthropic API key here
ANTHROPIC_API_KEY=

# Confidence threshold for authorization extraction (0.0-1.0)
LLM_AUTH_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# LLM Enrichment (OPTIONAL)
# =============================================================================
# Disable for now - can enable later for enhanced search
ENABLE_LLM_ENRICHMENT=false
LLM_ENRICHMENT_MODEL=claude-3-5-haiku-20241022
LLM_ENRICHMENT_BATCH_SIZE=20
LLM_ENRICHMENT_MAX_TOKENS=500

# =============================================================================
# Canton Payment Configuration (Canton Coins on Canton Network)
# =============================================================================
# TODO: Enable after Canton facilitator is deployed
CANTON_ENABLED=false

# Canton facilitator service URL
# TODO: Update after deploying Canton facilitator
CANTON_FACILITATOR_URL=http://localhost:3000

# Your Canton party identifier (receives Canton Coin payments)
# Example: ServiceProvider::12207d6f70656e2d736f757263652d6c6564676572
# TODO: Add your Canton payee party
CANTON_PAYEE_PARTY=

# Canton network
CANTON_NETWORK=canton-testnet

# =============================================================================
# x402 Payment Configuration (USDC on Base Sepolia - OPTIONAL)
# =============================================================================
# Disabled for now - using Canton payments instead
X402_ENABLED=false
X402_WALLET_ADDRESS=
X402_WALLET_PRIVATE_KEY=
X402_NETWORK=base-sepolia
X402_TOKEN=USDC
X402_INTERNAL_API_KEY=

# =============================================================================
# Pricing Configuration
# =============================================================================
X402_PRICING_MODE=dynamic
X402_MIN_PAYMENT=0.001
X402_MAX_PAYMENT=10.0

# =============================================================================
# Payment Processing
# =============================================================================
X402_VERIFICATION_TIMEOUT=30
X402_SETTLEMENT_TIMEOUT=60

# =============================================================================
# DCAP (Distributed Claude Agent Protocol) Configuration
# =============================================================================
DCAP_ENABLED=true
DCAP_MULTICAST_IP=
DCAP_PORT=10191
DCAP_SERVER_ID=canton-mcp-prod
DCAP_SERVER_NAME=Canton MCP Production Server
DCAP_DEFAULT_CALLER=unknown-client
DCAP_DEFAULT_PAYER=0x0000000000000000000000000000000000000000

