{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Canton Anti-Pattern Resource Schema",
  "description": "JSON Schema for Canton canonical anti-pattern resources",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "tags",
    "author",
    "created_at",
    "anti_pattern_type",
    "severity",
    "problematic_code",
    "why_problematic",
    "detection_pattern",
    "correct_alternative",
    "impact",
    "remediation"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name of the anti-pattern",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the anti-pattern",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the anti-pattern",
      "minLength": 10
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization and search",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "author": {
      "type": "string",
      "description": "Author or organization that identified the anti-pattern",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when anti-pattern was created",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when anti-pattern was last updated",
      "format": "date-time"
    },
    "anti_pattern_type": {
      "type": "string",
      "description": "Type of anti-pattern (e.g., authorization_vulnerability, logic_error)",
      "minLength": 1
    },
    "severity": {
      "type": "string",
      "description": "Severity level of the anti-pattern",
      "enum": ["low", "medium", "high", "critical"]
    },
    "problematic_code": {
      "type": "string",
      "description": "Example of the problematic code",
      "minLength": 10
    },
    "why_problematic": {
      "type": "string",
      "description": "Explanation of why this code is problematic",
      "minLength": 10
    },
    "detection_pattern": {
      "type": "array",
      "description": "Patterns that can be used to detect this anti-pattern",
      "items": {
        "type": "string",
        "minLength": 5
      },
      "minItems": 1
    },
    "correct_alternative": {
      "type": "string",
      "description": "Correct alternative implementation",
      "minLength": 10
    },
    "impact": {
      "type": "array",
      "description": "Impact assessment of the anti-pattern",
      "items": {
        "type": "object",
        "required": ["type", "severity", "description"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["correctness", "security", "performance", "maintainability"]
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "description": {
            "type": "string",
            "minLength": 5
          }
        }
      },
      "minItems": 1
    },
    "remediation": {
      "type": "array",
      "description": "Steps to fix the anti-pattern",
      "items": {
        "type": "string",
        "minLength": 5
      },
      "minItems": 1
    },
    "common_manifestations": {
      "type": "array",
      "description": "Common ways this anti-pattern manifests",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "risks": {
      "type": "array",
      "description": "Risks associated with this anti-pattern",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "prevention_strategies": {
      "type": "array",
      "description": "Strategies to prevent this anti-pattern",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "references": {
      "type": "array",
      "description": "External references and documentation",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
