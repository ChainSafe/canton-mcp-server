{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Canton Documentation Resource Schema",
  "description": "JSON Schema for Canton canonical documentation resources",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "tags",
    "author",
    "created_at",
    "doc_type",
    "audience",
    "difficulty",
    "overview",
    "sections"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Human-readable name of the documentation",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the documentation",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the documentation",
      "minLength": 10
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization and search",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "author": {
      "type": "string",
      "description": "Author or organization that created the documentation",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when documentation was created",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when documentation was last updated",
      "format": "date-time"
    },
    "doc_type": {
      "type": "string",
      "description": "Type of documentation",
      "enum": ["guide", "tutorial", "reference", "best-practices", "troubleshooting", "api-docs"]
    },
    "audience": {
      "type": "string",
      "description": "Target audience for the documentation",
      "enum": ["beginners", "developers", "architects", "operators", "all"]
    },
    "difficulty": {
      "type": "string",
      "description": "Difficulty level of the documentation",
      "enum": ["beginner", "intermediate", "advanced", "expert"]
    },
    "overview": {
      "type": "string",
      "description": "Overview of the documentation content",
      "minLength": 20
    },
    "sections": {
      "type": "array",
      "description": "Main sections of the documentation",
      "items": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "content": {
            "type": "string",
            "minLength": 10
          },
          "subsections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["title", "content"],
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "content": {
                  "type": "string",
                  "minLength": 5
                }
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "examples": {
      "type": "array",
      "description": "Code examples and demonstrations",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 5
          },
          "code": {
            "type": "string",
            "minLength": 1
          },
          "language": {
            "type": "string",
            "enum": ["daml", "yaml", "json", "bash", "python", "javascript"]
          },
          "explanation": {
            "type": "string",
            "minLength": 5
          }
        }
      }
    },
    "prerequisites": {
      "type": "array",
      "description": "Prerequisites for understanding this documentation",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "learning_objectives": {
      "type": "array",
      "description": "What readers will learn from this documentation",
      "items": {
        "type": "string",
        "minLength": 5
      }
    },
    "related_docs": {
      "type": "array",
      "description": "Related documentation resources",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "canonical_hash": {
      "type": "string",
      "description": "Git blob hash of the canonical source content for integrity verification",
      "pattern": "^[a-f0-9]{40}$"
    },
    "source_commit": {
      "type": "string",
      "description": "Git commit hash where this resource was extracted from",
      "pattern": "^[a-f0-9]{40}$"
    },
    "source_file": {
      "type": "string",
      "description": "Path to the source file in the canonical repository",
      "minLength": 1
    },
    "extracted_at": {
      "type": "string",
      "description": "ISO 8601 timestamp when resource was extracted from Git",
      "format": "date-time"
    },
    "references": {
      "type": "array",
      "description": "External references and documentation",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string",
            "minLength": 5
          }
        }
      }
    },
    "changelog": {
      "type": "array",
      "description": "Changelog for the documentation",
      "items": {
        "type": "object",
        "required": ["version", "date", "changes"],
        "properties": {
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 5
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
